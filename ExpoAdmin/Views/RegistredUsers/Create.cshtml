@model ExpoAdmin.Data.RegistredUser

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutEmpty";
}

<div class="row">
    <div class="col-6">
        <img class="w-100" style="max-width:300px" src="~/images/expo.png" />
    </div>
    <div class="col-6">
        <img class="w-100" style="max-width:300px" src="~/images/PITA Logo.png" />
    </div>
</div>
@if (TempData["status"] != null && TempData["status"].ToString() == "success!")
{
    <div class="alert alert-success d-block" role="alert">
        You Have Registered Successfully
    </div>
}
<h4>Expotech Guest Registration</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        West Bank <input asp-for="State" type="radio" checked="checked" value="West Bank" class="form-control Custome-Radio Radio-width" />
                    </div>
                    <div class="col">
                        Gaza Strip<input asp-for="State" type="radio" value="Gaza Strip" class="form-control Custome-Radio Radio-width" />
                    </div>
                </div>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">Full Name</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Organization" class="control-label"></label>
                <input asp-for="Organization" class="form-control" />
                <span asp-validation-for="Organization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col">
                        Male <input asp-for="Gender" type="radio" value="Male" checked="checked" class="form-control Custome-Radio Radio-width" />
                    </div>
                    <div class="col">
                        Female <input asp-for="Gender" type="radio" value="Female" class="form-control Custome-Radio Radio-width" />
                    </div>
                </div>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group pt-1">
                <div class="display-flex flex-items-centered footer-info">
                    <input type="submit" value="Submit" class="btn btn-primary" style="min-width: 120px;background-color: #007bff;" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
